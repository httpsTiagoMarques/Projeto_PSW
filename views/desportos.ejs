<!DOCTYPE html>
<html lang="pt">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Desportos</title>
  <link rel="stylesheet" href="/styles/views.css">
</head>
<body>
  <!-- Barra de navegação -->
  <nav class="navbar">
    <div class="navbar-center">
      <ul class="navbar-links">
        <li><a href="/dashboard?nome=<%= nome %>&userId=<%= userId %>">Dashboard</a></li>
        <li><a href="/desportos?nome=<%= nome %>&userId=<%= userId %>">Desportos</a></li>
        <li><a href="#">Estatísticas</a></li>
        <li><a href="/ranking?nome=<%= nome %>&userId=<%= userId %>">Rankings</a></li>
        <li><a href="/index.html" class="logout-button" onclick="sessionStorage.clear()">Log out</a></li>
      </ul>
    </div>      
  </nav>

  <!-- Conteúdo principal -->
  <div class="content">
    <div class="dashboard-box" style="display: flex; gap: 30px; justify-content: center;">
      
      <!-- Tabela de desportos -->
      <div style="flex: 2;">
        <h2>Desportos</h2>
        <button id="add-desporto-btn" class="add-button">+ Adicionar Desporto</button>
        <table class="stats-table">
          <thead>
              <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Criado Por</th>
                <th>Criado Em</th>
                <th></th>
              </tr>
          </thead>
          <tbody id="desportos-body"></tbody>
        </table>
      </div>

      <!-- Formulário para criar -->
      <div class="dashboard-box" id="form-box" style="flex: 1; display: none; text-align: left;">
        <h3>Novo Desporto</h3>
        <label for="nome-desporto">Nome:</label>
        <input type="text" id="nome-desporto" placeholder="Ex: Padel" />
        <div style="margin-top: 15px;">
          <button id="create-btn" class="create-btn">Criar</button>
          <button id="cancel-btn" class="cancel-btn">Cancelar</button>
        </div>
      </div>

      <!-- Formulário para editar -->
      <div class="dashboard-box" id="edit-box" style="flex: 1; display: none; text-align: left;">
        <h3>Editar Desporto</h3>
        <input type="hidden" id="edit-id" />
        <label for="edit-nome">Nome:</label>
        <input type="text" id="edit-nome" placeholder="Ex: Ténis" />
        <div style="margin-top: 15px;">
          <button id="save-edit-btn" class="create-btn">Guardar</button>
          <button id="cancel-edit-btn" class="cancel-btn">Cancelar</button>
        </div>
      </div>

    </div>
  </div>

  <script src="/scripts/desportos.js"></script>
</body>
</html>
