<!DOCTYPE html>
<html lang="pt">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Desportos</title>
  <link rel="stylesheet" href="/styles/views.css">
</head>
<body>
  <!-- Barra de navegação -->
  <%- include("navbar") %>

  <!-- Conteúdo principal -->
  <div class="content">
    <div class="dashboard-box" style="display: flex; gap: 30px; justify-content: center;">
      
      <!-- Tabela de desportos -->
      <div style="flex: 2;">
        <h2>Desportos</h2>
        <button id="add-desporto-btn" class="add-button">+ Adicionar Desporto</button>
        <table class="stats-table">
          <thead>
              <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Criado Por</th>
                <th>Criado Em</th>
                <th></th>
              </tr>
          </thead>
          <tbody id="desportos-body"></tbody>
        </table>
      </div>

      <!-- Formulário para criar -->
      <div class="dashboard-box" id="form-box" style="flex: 1; display: none; text-align: left;">
        <h3>Novo Desporto</h3>
        <form id="create-form">
          <label for="nome-desporto">Nome:</label>
          <input type="text" id="nome-desporto" name="nome" placeholder="Ex: Padel" required />
          <div style="margin-top: 15px;">
            <button type="submit" class="create-btn">Criar</button>
            <button type="button" id="cancel-btn" class="cancel-btn">Cancelar</button>
          </div>
        </form>
      </div>

      <!-- Formulário para editar -->
      <div class="dashboard-box" id="edit-box" style="flex: 1; display: none; text-align: left;">
        <h3>Editar Desporto</h3>
        <form id="edit-form">
          <input type="hidden" id="edit-id" name="id" />
          <label for="edit-nome">Nome:</label>
          <input type="text" id="edit-nome" name="nome" placeholder="Ex: Ténis" required />
          <div style="margin-top: 15px;">
            <button type="submit" class="create-btn">Guardar</button>
            <button type="button" id="cancel-edit-btn" class="cancel-btn">Cancelar</button>
          </div>
        </form>
      </div>

    </div>
  </div>

  <script src="/scripts/desportos.js"></script>
  <script src="/scripts/logout.js"></script>
</body>
</html>
